<Window x:Class="Speedreader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Speedreader"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">
    <Grid>
        <RichTextBox x:Name="InputTextBox" HorizontalAlignment="Left" Height="300" Margin="10,10,0,0" VerticalAlignment="Top" Width="573">
            <FlowDocument>
                <Paragraph>
                    <Run Text="Fill text here"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="StartStopBtn" Content="Button" HorizontalAlignment="Left" Margin="260,329,0,0" VerticalAlignment="Top" Width="80" Click="StartStopBtn_Click"/>
        <Button x:Name="MenuBtn" Content="Button" HorizontalAlignment="Left" Margin="508,329,0,0" VerticalAlignment="Top" Width="75"/>
        <Label x:Name="SpeedReaderPoint" Content="Label" HorizontalAlignment="Left" Margin="100,125,0,0" VerticalAlignment="Top" Width="400" Height="100" RenderTransformOrigin="0,0" Panel.ZIndex="-1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

    </Grid>
</Window>
