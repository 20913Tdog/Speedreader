<Window x:Class="Speedreader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Speedreader"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600" Margin="0" ResizeMode="NoResize">
    <Grid>
        <RichTextBox x:Name="InputTextBox" Height="300" Margin="12,0,0,0" VerticalAlignment="Top" Width="570" MinWidth="0" HorizontalAlignment="Left">
            <FlowDocument>
                <Paragraph>
                    <Run Text="Fill text here"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="StartStopBtn" Content="Button" HorizontalAlignment="Center" Margin="0,0,0,5" VerticalAlignment="Bottom" Width="80" Click="StartStopBtn_Click"/>
        <Button x:Name="MenuBtn" Content="Button" HorizontalAlignment="Right" Margin="0,0,10,5" VerticalAlignment="Bottom" Width="75" Click="MenuBtn_Click"/>
        <Label x:Name="SpeedReaderPoint" Content="Label" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Width="400" Height="100" RenderTransformOrigin="0,0" Panel.ZIndex="-1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

    </Grid>
</Window>
